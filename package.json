{
  "scripts": {
    "dev": "npm-run-all --race --parallel dev:lint \"dev:run -- {@}\" --",
    "build": "next build",
    "start": "next start",
    "test": "standard",
    "lint": "standard",
    "dev:run": "next dev",
    "dev:lint": "sleep 5 && yarn lint-watch",
    "lint-watch": "nodemon --exec 'standard' --watch '**/*.js' --ignore node_modules"
  },
  "dependencies": {
    "next": "^8.0.3",
    "react": "16.8.4",
    "react-dom": "16.8.4"
  },
  "devDependencies": {
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "standard": "^12.0.1"
  }
}
